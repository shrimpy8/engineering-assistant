{
  "name": "engineering-assistant",
  "version": "0.1.0",
  "private": true,
  "description": "Local-first AI assistant for codebase analysis using MCP",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest",
    "test:unit": "vitest run --dir __tests__/unit",
    "test:integration": "vitest run --dir __tests__/integration",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "validate-env": "npx tsx scripts/validate-env.ts",
    "mcp:start": "cd mcp-server && npm run start",
    "mcp:dev": "cd mcp-server && npm run dev"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "next": "16.1.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "playwright": "^1.57.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.0",
    "typescript": "^5",
    "vitest": "^2.1.0"
  }
}
