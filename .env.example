# ============================================
# Engineering Assistant - Environment Configuration
# Copy this file to .env.local and customize
# ============================================

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
LOG_LEVEL=info                    # debug | info | warn | error
LOG_FORMAT=pretty                 # json | pretty
PORT=3000

# ============================================
# Ollama Configuration
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OLLAMA_TIMEOUT_MS=60000
OLLAMA_MAX_RETRIES=3

# ============================================
# MCP Server Configuration
# ============================================
MCP_TRANSPORT=stdio               # stdio | tcp
MCP_TCP_PORT=3001
MCP_LOG_LEVEL=info

# ============================================
# Security Configuration
# ============================================
# If set, restricts repos to paths inside this directory
ALLOWED_REPO_ROOT=false
MAX_FILE_SIZE_BYTES=1048576       # 1MB
MAX_SEARCH_RESULTS=50
SEARCH_TIMEOUT_MS=10000

# ============================================
# Feature Flags
# ============================================
ENABLE_TOOL_TRACE=true
ENABLE_STREAMING=true
ENABLE_METRICS=false              # Future: Prometheus metrics

# ============================================
# Development Only
# ============================================
DEV_DISABLE_SANDBOX=false         # DANGER: Never true in production
DEV_MOCK_OLLAMA=false
